<!DOCTYPE html>

<html lang="en">
  <%- include('includes/head') %>
  <body>
    <%- include('includes/header') %>

    <main>
      <h1><%= post.title%></h1>

      <article>
        <small
          >Posted by <%= post.username %> on <%= new
          Date(post.createDate).getMonth() + 1 %>/<%=new
          Date(post.createDate).getDate() %>/ <%= new
          Date(post.createDate).getFullYear()%>
        </small>

        <div>
          <p><%= post.body %></p>
        </div>
      </article>

      <a href="/edit-post/<%= post.id %>" class="button">Edit Post</a>

      <form style="display: inline" action="/delete-post/<%=post.id%>">
        <button>Delete Posts</button>
      </form>
    </main>
    <%- include('includes/footer') %>
  </body>
</html>
